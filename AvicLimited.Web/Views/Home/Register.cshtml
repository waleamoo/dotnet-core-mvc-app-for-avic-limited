@model SignUpVM
@{
    ViewData["Title"] = "Sign Up";
}

<main id="main">
    <!-- ======= Why Us Section ======= -->
    <section class="services" id="services">
        <br /> <br /> <br />
        <div class="container">
            <div class="section-title">
                <h2>Register</h2>
                <p>Fill the form to register with us.</p>
            </div>

            <div class="row">

                <div class="col-lg-12">
                    <partial name="_notification" />
                    <form method="post" asp-action="Register" asp-controller="Home">

                        <div asp-validation-summary="All" class="text-danger"></div>


                        <div class="form-row">
                            <div class="col-md-6 form-group">
                                <input asp-for="ClientLastName" class="form-control" placeholder="Your Last Name" />
                                <span asp-validation-for="ClientLastName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <input asp-for="ClientFirstName" class="form-control" placeholder="Your First Name" />
                                <span asp-validation-for="ClientFirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col-md-3 form-group">
                                <input asp-for="ClientCompany" class="form-control" placeholder="Your Company (Optional)" />
                                <span asp-validation-for="ClientCompany" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 form-group">
                                <input asp-for="ClientEmail" class="form-control" placeholder="Your Email Addresss" />
                                <span asp-validation-for="ClientEmail" class="text-danger"></span>
                            </div>
                            <div class="col-md-3 form-group">
                                <input asp-for="ClientPhone" class="form-control" placeholder="Your Phone Number" />
                                <span asp-validation-for="ClientPhone" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <input asp-for="ClientAddress" class="form-control" placeholder="Your Address" />
                            <span asp-validation-for="ClientAddress" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="text-center"><button type="submit" class="appointment-btn">Register</button></div>

                    </form>
                </div>

                
            </div>

        </div>
    </section>
    
</main>